<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 27+: windowShowWhenLocked and windowTurnScreenOn exist in platform attrs -->
    <style name="LockscreenAlertTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowShowWhenLocked">true</item>
        <item name="android:windowTurnScreenOn">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
